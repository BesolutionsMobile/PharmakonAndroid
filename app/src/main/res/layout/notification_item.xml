<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="1"
    android:orientation="vertical"
    android:background="@color/colorNotification"
    android:layout_margin="@dimen/_10sdp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_75sdp"
        android:orientation="horizontal"
        android:weightSum="1">


        <androidx.cardview.widget.CardView
            android:id="@+id/view2"
            android:layout_width="0dp"
            android:layout_weight=".3"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/_5sdp"
            android:background="@color/colorw"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:innerRadius="0dp"
            android:shape="oval"
            app:cardBackgroundColor="@color/colorw"
            app:cardCornerRadius="@dimen/_15sdp">


            <ImageView
                android:id="@+id/imgNotification"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:scaleX=".9"
                android:scaleY=".9"
                android:src="@drawable/splash_logo"
                />

        </androidx.cardview.widget.CardView>



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".7"
            android:layout_marginStart="@dimen/_10sdp"
            android:orientation="vertical"
            android:layout_marginEnd="@dimen/_7sdp"
            android:layout_marginTop="@dimen/_7sdp"
            android:weightSum="1">



            <TextView
                android:id="@+id/txtNotificationTitle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".3"
                android:text="Notification Name"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="@dimen/_12sdp"
                android:paddingStart="0dp"
                android:paddingEnd="@dimen/_5sdp"
                android:gravity="center_vertical"
                />



            <TextView
                android:id="@+id/txtNotificationDesc"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".7"
                android:text="Notification Desc"
                android:textColor="@color/colorLightGray"
                android:textStyle="bold"
                android:textSize="@dimen/_11sdp"
                android:paddingStart="0dp"
                android:paddingEnd="@dimen/_5sdp"
                android:gravity="center_vertical"
                />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>