<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorw"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".ScenarioFarmakon.ScenarioHome.Controller.Home">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".35"
            android:scaleX=".55"
            android:scaleY=".55"
            android:src="@drawable/splash_logo" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".5"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".2"
                android:gravity="center"
                android:text="WELCOME"
                android:textColor="@color/colorDarkerGray"
                android:textSize="@dimen/_35sdp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".1"
                android:gravity="center"
                android:text="Sign in to continue"
                android:textColor="@color/colorDarkerGray"
                android:textSize="@dimen/_17sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginEnd="@dimen/_40sdp"
                android:layout_weight=".17"
                android:background="@drawable/raduis_all"
                android:backgroundTint="@color/colorPrimary"
                android:orientation="vertical"
                android:weightSum="1">


                <TextView
                    android:id="@+id/txtSignInWithNumber"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Sign in with mobile number"
                    android:textColor="@color/colorw"
                    android:textSize="@dimen/_15sdp" />


            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_weight=".1"
                android:gravity="center"
                android:text="or"
                android:textColor="@color/colorDarkerGray"
                android:textSize="@dimen/_17sdp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/_40sdp"
                android:layout_marginEnd="@dimen/_40sdp"
                android:layout_weight=".17"
                android:background="@drawable/raduis_all"
                android:backgroundTint="@color/colorFacebookBlue"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="1">


                <ImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="match_parent"
                    android:src="@drawable/facebook_icon"
                    android:scaleX=".8"
                    android:scaleY=".8"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorw"
                    android:textSize="@dimen/_15sdp"
                    android:text="Sign in with"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorw"
                    android:textSize="@dimen/_14sdp"
                    android:text="Facebook"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:textStyle="bold"
                    android:gravity="center"/>



            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".15">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/_20sdp"
                android:weightSum="1">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textStyle=""
                    android:text="By continuing you agree to"
                    android:textSize="@dimen/_7sdp"
                    android:textColor="@color/colorDarkerGray"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textStyle=""
                    android:text="terms and conditions"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_marginEnd="@dimen/_2sdp"
                    android:textSize="@dimen/_7sdp"
                    android:textColor="@color/colorPrimary"/>




            </LinearLayout>



        </RelativeLayout>

    </LinearLayout>


</LinearLayout>