<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_110sdp"
    android:background="@drawable/background_header"
    android:orientation="vertical"
    android:weightSum="3">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_7sdp"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleX=".8"
                android:scaleY=".8"
                android:src="@drawable/icon_tool_logo"

                />


        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_25sdp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/menu"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:scaleX=".8"
            android:scaleY=".8"
            android:src="@drawable/icon_side_logo"
            android:layout_marginTop="@dimen/_10sdp"/>

        <AutoCompleteTextView
            android:id="@+id/editToolSearch"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_25sdp"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/_50sdp"
            android:layout_marginEnd="@dimen/_60sdp"
            android:background="@drawable/raduis_all"
            android:drawableStart="@drawable/ic_search_black"
            android:drawablePadding="@dimen/_3sdp"
            android:hint="Search"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:singleLine="true"
            android:completionThreshold="1"/>


        <androidx.cardview.widget.CardView
            android:id="@+id/view2"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:background="@color/colorw"
            android:innerRadius="0dp"
            android:shape="oval"
            android:thicknessRatio="2"
            app:cardBackgroundColor="@color/colorw"
            app:cardCornerRadius="@dimen/_20sdp"
            android:layout_centerInParent="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_5sdp">

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_36sdp"
                android:layout_height="@dimen/_36sdp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:innerRadius="0dp"
                android:padding="2dp"
                android:shape="oval"
                android:thicknessRatio="2"
                app:cardCornerRadius="@dimen/_18sdp">


                <ImageView
                    android:id="@+id/imgPersonalInfo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/images" />
            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>


    </RelativeLayout>


</RelativeLayout>