<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".ScenarioFarmakon.ScenarioHome.Controller.SignIn">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".23"
        android:background="@drawable/background_header" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".77"
        android:orientation="vertical"
        android:weightSum="1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_weight=".3"
            android:scaleX=".9"
            android:scaleY=".9"
            android:src="@drawable/splash_logo" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_weight=".07"
            android:gravity="center_vertical"
            android:text="Enter your phone number"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_weight=".08"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/_5sdp"
            android:paddingEnd="@dimen/_5sdp"
            android:text="PHONE NUMBER"
            android:textColor="@color/colorb"
            android:textSize="@dimen/_15sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_weight=".1"
            android:orientation="horizontal"
            android:weightSum="1"

            >

            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_3sdp"
                android:layout_marginEnd="@dimen/_3sdp"
                android:layout_weight=".15"
                android:backgroundTint="@color/colorLightYellow"
                android:editable="false"
                android:gravity="center"
                android:text="+20"
                android:textColor="@color/colorb"
                android:textSize="@dimen/_14sdp" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_weight=".85"
                android:backgroundTint="@color/colorLightYellow"
                android:gravity="start|center_vertical"
                android:paddingStart="@dimen/_5sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:hint="01004646198"
                android:inputType="phone"
                android:textColor="@color/colorb"
                android:textSize="@dimen/_14sdp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_weight=".07"
            android:orientation="horizontal"
            android:weightSum="1">

            <CheckBox
                android:id="@+id/remember_me"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="match_parent"
                android:buttonTint="@color/colorAccent"
                android:checked="true"
                android:gravity="center"
                android:scaleX="1.2"
                android:scaleY="1.2"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_11sdp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Make sure the phone "
                android:textColor="@color/colorb"
                android:textSize="@dimen/_11sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="number is correct"
                android:textColor="@color/colorLightBlue"
                android:textSize="@dimen/_11sdp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_13sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_weight=".2"
            android:gravity="bottom"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnSignIn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginBottom="@dimen/_7sdp"
                android:background="@drawable/raduis_all_gradiant"
                android:text="Processed with phone number"
                android:textColor="@color/colorw"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_weight=".18"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="By continuing you agree to "
                android:textSize="@dimen/_8sdp"
                android:textColor="@color/colorb"
                android:gravity="center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="terms and conditions"
                android:textSize="@dimen/_8sdp"
                android:textColor="@color/colorLightBlue"
                android:gravity="center_vertical"/>




        </LinearLayout>


    </LinearLayout>

</LinearLayout>